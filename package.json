{
  "name": "@graphql-schema/monorepo",
  "private": true,
  "@rollingversions/ignore": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn wsrun -e --stages build",
    "postbuild": "rimraf packages/*/lib/**/__tests__",
    "lint": "tslint './packages/*/src/**/*.{ts,tsx}' -t verbose -p .",
    "prettier:write": "prettier --ignore-path .gitignore --write './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "test": "jest",
    "ci:test": "jest --silent --maxWorkers=2"
  },
  "dependencies": {},
  "devDependencies": {
    "@forbeslindesay/tsconfig": "^2.0.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^14.14.21",
    "@types/sane": "^2.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "typescript": "^4.4.4",
    "wsrun": "^5.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/*/src/**/__tests__/**/*.test.ts?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint -t verbose -p ."
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write"
    ]
  }
}
